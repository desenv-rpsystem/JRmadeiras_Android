<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="44"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mapa_retira_icone_checked"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/icone_unchecked" />

                <TextView
                    android:id="@+id/mapa_retira_flag_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="false"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/mapa_retira_codigo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Código"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mapa_retira_cod_ite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="00429817"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3" />

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:weightSum="9">

                        <TextView
                            android:id="@+id/mapa_retira_descricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Descrição"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mapa_retira_nom_ite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="MDF BRANCO ARAUCO"
                            android:textColor="@color/cinza_escuro" />


                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:weightSum="81">

                        <TextView
                            android:id="@+id/mapa_retira_unidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="18"
                            android:gravity="left"
                            android:text="Unid."
                            android:textSize="@dimen/h4"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mapa_retira_cod_uni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="24"
                            android:gravity="center"
                            android:textSize="@dimen/h5_grande"
                            android:text="PC"
                            android:textColor="@color/cinza_escuro" />


                        <TextView
                            android:id="@+id/mapa_retira_quantidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:textSize="@dimen/h4"
                            android:text="Qtd"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mapa_retira_qtd_ite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="19"
                            android:gravity="center"
                            android:textSize="@dimen/h4"
                            android:textStyle="bold"
                            android:text="10"
                            android:textColor="@color/colorPrimary" />

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:weightSum="9">

                        <TextView
                            android:id="@+id/mapa_retira_deposito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Deposito"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mapa_retira_cod_dep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="01 EXP PEQUENA"
                            android:textColor="@color/cinza_escuro" />


                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:weightSum="9">

                        <TextView
                            android:id="@+id/mapa_retira_localizacao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Local"
                            android:textSize="@dimen/h4"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/mapa_retira_ide_cod_loc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="AB12"
                            android:textSize="@dimen/h4"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                    </TableRow>

                    <TextView
                        android:id="@+id/mapa_retira_pendente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="left"
                        android:text=""/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="44"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mapa_retira_icone_editar"
                    android:layout_width="27dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:clickable="true"
                    android:src="@drawable/icone_lapis" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cinza_claro" />

    </LinearLayout>

</LinearLayout>