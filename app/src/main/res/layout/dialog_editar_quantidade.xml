<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_editar_quantidade_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_editar_quantidade_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Titulo"
            android:textColor="@color/white"
            android:textSize="@dimen/h4"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5_grande"
                    android:text="Quantidade Ã  entregar: "
                    android:textColor="@color/black"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/dialog_editar_quantidade_qtd_ite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100.00"
                    android:textSize="@dimen/h5_grande"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:weightSum="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantidade pendente de entrega:"
                    android:layout_gravity="fill_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h5_grande"
                    android:layout_weight="2"/>

                <EditText
                    android:id="@+id/dialog_editar_quantidade_qtd_pen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h5_grande"
                    android:text=""
                    android:inputType="numberSigned"
                    android:textColor="@color/black"
                    android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/cinza"
                    app:cardCornerRadius="4dp">

                    <Button
                        android:id="@+id/dialog_editar_quantidade_botao_cancelar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="Cancelar"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h5" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp">

                    <Button
                        android:id="@+id/dialog_editar_quantidade_botao_gravar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="Gravar"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h5" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>